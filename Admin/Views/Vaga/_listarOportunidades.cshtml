@model IEnumerable<Admin.Models.VagaViewModel>

@{
    ViewBag.Title = "_listarOportunidades";
}


<div class="card stacked-form">
    <div class="card-header ">
        <h4 class="card-title">Escolha o evento</h4>
    </div>
    <div class="card-body table-full-width table-responsive">
        <table id="tbOportunidades" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Data</th>
                    <th>Empresa</th>
                    <th>Qtd</th>
                    <th>Valor</th>
                    <th>Profissional</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @item.DataEvento
                        </td>
                        <td>
                            @item.NomeEmpresa
                        </td>
                        <td>
                            @item.Qtd
                        </td>
                        <td>
                            @item.Valor
                        </td>
                        <td>
                            @item.ProfissionalNome
                        </td>
                        <td></td>
                    </tr>


                }


            </tbody>
        </table>
    </div>
    <div class="card-footer ">
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/jquery.datatables.js"></script>
    <script>
        $('#tbOportunidades').dataTable();
    </script>
}