
@{
    ViewBag.Title = "INSERIR CRÉDITOS";
    ViewBag.PageTitle = "CRÉDITOS";
}

@model Admin.Models.Financeiro.CreditoViewModel

<div class="row">
    <div class="col-md-12">
        <div id="miolo" class="card strpied-tabled-with-hover card-wizard">

            <div class="card-header text-center">
                <h4 class="text-center">CRÉDITOS</h4>
                @if (TempData["Message"] != null && !string.IsNullOrEmpty(TempData["Message"].ToString()))
                {
                    <span class="label label-default">@TempData["Message"].ToString()</span>
                }
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab1" role="tabpanel">

                        @using (Html.BeginForm("Inserir", "Creditos", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Perfis">Empresa</label>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(u => u.Empresa, (IEnumerable<SelectListItem>)ViewBag.Empresas, new { @class = "form-control perfis chosen-select" })
                                        @Html.ValidationMessageFor(u => u.Empresa)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Nome">Quantidade de Créditos (R$)</label>
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(u => u.Valor, new { name = "Nome", @class = "form-control", type = "text", id = "money" })
                                        @Html.ValidationMessageFor(u => u.Valor)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Perfis">Natureza da Operação</label>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(u => u.Natureza, (IEnumerable<SelectListItem>)ViewBag.Naturezas, new { @class = "form-control perfis chosen-select" })
                                        @Html.ValidationMessageFor(u => u.Natureza)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Nome">Taxa (%)</label>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(u => u.TaxaString, new { name = "Taxa", @class = "form-control", type = "text", id = "taxa" })
                                        @Html.ValidationMessageFor(u => u.Taxa)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Perfis">Observações</label>
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(u => u.Descricao, new { @class = "form-control perfis", style = "height: 100px;" })
                                        @Html.ValidationMessageFor(u => u.Descricao)
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-10"></div>
                                    <div class="col-md-2">
                                        <button type="submit" id="btnInserirCredito" class="btn btn-fill btn-primary">Inserir Créditos</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Plugins/jquery.mask.js"></script>
    <script src="~/Scripts/Plugins/jquery.maskMoney.js"></script>
    <script src="~/Scripts/Plugins/chosen.jquery.js"></script>

    <script>
        $(document).ready(function () {
            $(".chosen-select").chosen({ no_results_text: "Nada encontrado!" });
            $(".chosen-select").chosen({ allow_single_deselect: true });
            $("input.dinheiro");

            $('#money').maskMoney({ showSymbol: true, symbol: "R$", decimal: ",", thousands: "." });
            $('#taxa').maskMoney({ showSymbol: false, decimal: ",", thousands: "." });
        });

    </script>
}